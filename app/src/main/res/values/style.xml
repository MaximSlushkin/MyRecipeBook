<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="cornerRadius">@dimen/default_rounded_margins</item>
    </style>

    <style name="TextAppearance.CategoriesHeader" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textColor">@color/text_header_categories</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.CategoriesCard" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textColor">@color/text_header_categories</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.CategoryDescription" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_variable_font_wght</item>
        <item name="android:textColor">@color/text_categories_description</item>
    </style>

</resources>