<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/default_rounded_margins"
    android:layout_marginBottom="@dimen/header_margin"
    app:cardBackgroundColor="@color/background_color"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="@dimen/default_rounded_margins"
    app:cardElevation="@dimen/category_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/category_image_height"
            android:contentDescription="@string/burger_categories_description"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tvCategoryTitle"
            style="@style/TextAppearance.CategoriesCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_rounded_margins"
            android:layout_marginTop="@dimen/default_rounded_margins"
            android:text="@string/burger_categories" />

        <TextView
            android:id="@+id/tvCategoryDescription"
            style="@style/TextAppearance.CategoryDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_rounded_margins"
            android:text="@string/burger_description" />
    </LinearLayout>
</androidx.cardview.widget.CardView>