<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/ivFavorite"
        android:layout_width="0dp"
        android:layout_height="@dimen/header_height"
        android:background="@color/white"
        android:contentDescription="@string/favorites_description"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFragmentTitle"
        style="@style/TextAppearance.CategoriesHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/header_margin"
        android:layout_marginBottom="@dimen/header_margin"
        android:background="@drawable/rounded_background"
        android:padding="@dimen/header_text_padding"
        android:text="@string/title_favorites"
        app:layout_constraintBottom_toBottomOf="@+id/ivFavorite"
        app:layout_constraintStart_toStartOf="@+id/ivFavorite" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRecipes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/default_rounded_margins"
        android:layout_marginTop="@dimen/header_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivFavorite"
        tools:listitem="@layout/item_recipe" />

    <TextView
        android:id="@+id/tvEmptyState"
        style="@style/TextAppearance.CategoryIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вы еще не добавили ни одного рецепта в избранное"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>